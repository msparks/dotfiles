[user]
  name = Matt Sparks
  email = ms@quadpoint.org

[alias]
  aa = commit --amend -a
  aac = commit --amend -a -c HEAD
  amend = commit --amend
  ci = commit -a
  co = checkout
  st = status
  lg = log --stat --decorate
  lgg = log --graph --decorate --pretty=format:'%C(bold red)%h%Creset -%C(cyan)%d%Creset %s %C(cyan)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  praise = blame
  undo = reset --soft HEAD^

[apply]
  whitespace = strip

[diff]
  renames = copy

[rebase]
  stat = true

[color]
  branch = true
  diff = true
  interactive = true
  status = true

[core]
  excludesfile = ~/.gitignore_global

[merge]
  conflictstyle = diff3
  ff = only

[multi]
  exporttags = default

[push]
  default = simple
